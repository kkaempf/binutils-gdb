OBJS:=sframe.obj,sframe-dump.obj,sframe-error.obj

ifeq ($(CC),gcc)
CFLAGS=/include=([],[-.include],[-.libctf])
else
OPT=/noopt/debug
CFLAGS=/name=(as_is,shortened)/include=([],"../include","../libctf")\
 /define=("unlink=remove",DEBUGDIR="""GNU$$DEBUGDIR:""")\
 /warns=(infor=(missingreturn,badansialias))$(OPT)
endif

libsframe.olb: $(OBJS)
	purge
	lib/create libsframe $(OBJS)

config.h: config.h-vms
	copy $< $@

sframe.c: config.h
sframe-dump.c: config.h
sframe-error.c: config.h

clean:
	$$ purge
	$(RM) *.olb;
	$(RM) *.obj;
